{
    "name": "@adobe/spectrum-web-components",
    "private": true,
    "workspaces": [
        "packages/*",
        "projects/*"
    ],
    "publishConfig": {
        "registry": "https://artifactory.corp.adobe.com/artifactory/api/npm/npm-crisp-release-local/"
    },
    "version": "0.0.9",
    "description": "",
    "type": "module",
    "engines": {
        "node": ">=14.15.3",
        "yarn": ">=1.16.0"
    },
    "scripts": {
        "analyze": "lit-analyzer 'packages/*/src/**/!(*.css).ts'",
        "analyze:quick": "lit-analyzer \"packages/*/src/!(*.css).ts\"",
        "get-ready": "yarn build:clear-cache && run-p process-icons process-spectrum && yarn build",
        "postinstall": "yarn get-ready",
        "spectrum-vars": "node ./scripts/spectrum-vars.js",
        "spectrum-css": "node ./scripts/process-spectrum-css.js",
        "process-spectrum": "yarn spectrum-vars && yarn spectrum-css && pretty-quick --pattern \"packages/**/*.css\"",
        "postprocess-spectrum": "pretty-quick --pattern \"packages/**/*.css\"",
        "process-icons": "run-p icons icons:ui icons:workflow",
        "icons": "node ./scripts/process-icons.js && pretty-quick --pattern \"packages/**/*.svg.ts\"",
        "icons:ui": "lerna run --scope @spectrum-web-components/icons-ui build",
        "icons:workflow": "lerna run --scope @spectrum-web-components/icons-workflow build",
        "build": "yarn build:css && tsc --build packages/**/tsconfig.json && tsc --build projects/story-decorator/tsconfig.json && tsc --build projects/vrt-compare/tsconfig.json",
        "build:watch": "tsc --build packages/**/tsconfig.json -w",
        "build:tests": "tsc --build test/tsconfig.json && tsc --build test/tsconfig-node.json",
        "build:clear-cache": "rimraf packages/*/lib && rimraf packages/*/tsconfig.tsbuildinfo",
        "build:css": "node ./tasks/build-css.js",
        "watch:css": "node ./tasks/watch-css.js",
        "prestorybook": "wca analyze 'packages/*/*.d.ts' --format json --outFile custom-elements.json && node ./scripts/add-custom-properties.js --src='custom-elements.json'",
        "storybook": "yarn storybook:stories:build && run-p watch:css build:watch storybook:stories:watch storybook:start",
        "storybook:start": "web-dev-server --config wds-storybook.config.js",
        "storybook:stories:build": "tsc --build .storybook/tsconfig.json",
        "storybook:stories:watch": "tsc --build .storybook/tsconfig.json -w",
        "prestorybook:build": "yarn prestorybook",
        "storybook:build": "yarn storybook:stories:build && build-storybook -o projects/documentation/dist/storybook",
        "docs:analyze": "wca analyze 'packages/*/*.d.ts' --format json --outFile projects/documentation/custom-elements.json",
        "postdocs:analyze": "node ./scripts/add-custom-properties.js --src='projects/documentation/custom-elements.json'",
        "docs:build": "yarn eleventy",
        "postdocs:build": "cp projects/documentation/content/favicon.ico projects/documentation/dist/",
        "docs:ci": "yarn docs:analyze && run-p eleventy storybook:build && cp projects/documentation/custom-elements.json projects/documentation/dist/storybook",
        "postdocs:ci": "yarn postdocs:build",
        "docs:start": "yarn docs:analyze && run-p watch:css build:watch eleventy:watch",
        "docs:review": "alex packages/**/*.md",
        "lint": "yarn lint:js && yarn lint:docs && yarn lint:ts && yarn lint:css",
        "lint:js": "eslint -f pretty 'tasks/**/*.js' && eslint -f pretty 'scripts/**/*.js'",
        "lint:docs": "eslint -f pretty 'projects/documentation/**/*.ts'",
        "lint:ts": "eslint -f pretty 'packages/**/*.ts'",
        "lint:css": "stylelint 'packages/**/*.css'",
        "lint:versions": "node ./scripts/lint-versions.js",
        "precustom-element-json": "lerna exec --ignore '{@spectrum-web-components/{base,bundle,icons-ui,icons-workflow,iconset,modal,shared,styles},example-project-rollup,example-project-webpack,swc-templates}' -- rm custom-elements.json ||:",
        "custom-element-json": "lerna exec --ignore '{@spectrum-web-components/{base,bundle,icons-ui,icons-workflow,modal,iconset,shared,styles},example-project-rollup,example-project-webpack,swc-templates}' -- wca analyze '*.d.ts' --format json --outFile custom-elements.json",
        "postcustom-element-json": "lerna exec --ignore '{@spectrum-web-components/{base,bundle,icons-ui,icons-workflow,iconset,modal,shared,styles},example-project-rollup,example-project-webpack,swc-templates}' -- test -f custom-elements.json",
        "prelerna-publish": "yarn get-ready && yarn custom-element-json",
        "lerna-publish": "lerna publish --message 'chore: release new versions'",
        "test": "yarn test:focus unit",
        "test:focus": "yarn build && yarn test:ci --coverage --group",
        "test:build": "tsc --build test/tsconfig-plugins.json && tsc --build test/tsconfig-test.json",
        "test:ci": "yarn test:build && yarn test:start",
        "test:start": "web-test-runner",
        "test:watch": "run-p watch:css 'test:build -w' 'test:start --watch --group unit'",
        "test:bench": "node test/benchmark/cli.js",
        "pretest:visual": "yarn build && yarn storybook:stories:build && yarn test:build",
        "test:visual": "yarn test:visual:ci",
        "test:visual:ci": "yarn test:start --group",
        "test:visual:clean": "yarn test:visual:clean:baseline && yarn test:visual:clean:current",
        "test:visual:clean:baseline": "rm -rf test/visual/screenshots-baseline",
        "test:visual:clean:current": "rm -rf test/visual/screenshots-current",
        "new-package": "cd projects/templates && plop",
        "prepare": "husky install",
        "preeleventy": "yarn docs:analyze",
        "eleventy": "lerna run --scope documentation build --stream",
        "eleventy:production": "lerna run --scope documentation build:production --stream",
        "eleventy:watch": "lerna run --scope documentation watch --stream",
        "docs:watch": "run-p build:watch watch:css eleventy:watch"
    },
    "peerDependencies": {
        "common-tags": "^1.8.0",
        "prismjs": "^1.15.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^12.1.1",
        "@commitlint/config-conventional": "^12.1.1",
        "@commitlint/config-lerna-scopes": "^12.1.1",
        "@netlify/build": "^10.2.1",
        "@open-wc/dev-server-hmr": "^0.1.1",
        "@open-wc/lit-helpers": "^0.3.12",
        "@open-wc/testing": "^2.5.32",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^11.2.0",
        "@spectrum-css/table": "^3.0.1",
        "@types/chai": "^4.1.7",
        "@types/command-line-args": "^5.0.0",
        "@types/command-line-usage": "^5.0.1",
        "@types/common-tags": "^1.4.0",
        "@types/node": "^14.0.1",
        "@types/prismjs": "^1.16.0",
        "@types/sinon": "^9.0.0",
        "@types/webpack": "^4.4.26",
        "@types/webpack-env": "^1.13.9",
        "@typescript-eslint/eslint-plugin": "^4.16.1",
        "@typescript-eslint/parser": "^4.16.1",
        "@vaadin/router": "^1.2.0",
        "@web/dev-server": "^0.1.10",
        "@web/dev-server-rollup": "^0.3.2",
        "@web/dev-server-storybook": "^0.3.5",
        "@web/rollup-plugin-copy": "^0.2.0",
        "@web/rollup-plugin-html": "^1.5.0",
        "@web/test-runner": "^0.12.17",
        "@web/test-runner-commands": "^0.4.1",
        "@web/test-runner-junit-reporter": "^0.4.1",
        "@web/test-runner-playwright": "^0.8.4",
        "@web/test-runner-visual-regression": "^0.5.1",
        "@webcomponents/webcomponentsjs": "^2.4.4",
        "alex": "^9.0.1",
        "chalk": "^4.0.0",
        "common-tags": "^1.8.0",
        "cssnano": "^4.1.10",
        "deepmerge": "^4.0.0",
        "element-closest": "^3.0.1",
        "eslint": "^7.21.0",
        "eslint-config-prettier": "^8.1.0",
        "eslint-formatter-pretty": "^4.0.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-lit-a11y": "^1.0.1",
        "eslint-plugin-notice": "^0.9.10",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-spectrum-web-components": "file:./linters/eslint",
        "express": "^4.16.4",
        "fs-extra": "^9.0.0",
        "gh-pages": "^3.1.0",
        "globby": "^11.0.3",
        "husky": "^5.1.3",
        "lerna": "^3.20.2",
        "linebyline": "^1.3.0",
        "lit-analyzer": "^1.2.1",
        "lit-element": "^2.4.0",
        "lit-html": "^1.0.0",
        "lodash": "^4.17.15",
        "merge2": "^1.2.3",
        "mocha-junit-reporter": "^2.0.0",
        "netlify-cli": "^3.13.1",
        "netlify-plugin-checklinks": "^4.1.1",
        "node-fetch": "^2.6.0",
        "npm-run-all": "^4.1.5",
        "playwright": "^1.10.0",
        "plugin-error": "^1.0.1",
        "pngjs": "^6.0.0",
        "postcss": "^8.2.9",
        "postcss-custom-properties": "^11.0.0",
        "postcss-focus-visible": "^5.0.0",
        "postcss-import": "^14.0.0",
        "postcss-inherit": "^4.1.0",
        "postcss-mixins": "^7.0.3",
        "postcss-preset-env": "^6.7.0",
        "postcss-prefixwrap": "^1.22.1",
        "postcss-reporter": "^7.0.2",
        "postcss-selector-parser": "^6.0.4",
        "prettier": "^2.0.5",
        "pretty-quick": "^3.1.0",
        "prismjs": "^1.15.0",
        "re-template-tag": "^2.0.1",
        "rimraf": "^3.0.0",
        "serve-index": "^1.9.1",
        "sinon": "^9.0.2",
        "stylelint": "^13.12.0",
        "stylelint-config-prettier": "^8.0.2",
        "stylelint-config-standard": "^21.0.0",
        "tachometer": "^0.5.8",
        "typescript": "^4.2.3",
        "walker": "^1.0.7",
        "web-component-analyzer": "^1.1.6",
        "webpack": "^4.41.6",
        "webpack-bundle-analyzer": "^4.3.0",
        "webpack-cli": "^4.3.1",
        "webpack-dev-server": "^3.10.3",
        "webpack-merge": "^4.2.2",
        "webpackbar": "^4.0.0",
        "yargs": "^16.2.0"
    },
    "resolutions": {
        "cssnano/**/postcss-calc": "7.0.0",
        "rollup-plugin-workbox": "6.1.1"
    }
}
